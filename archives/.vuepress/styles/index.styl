}

/* ############################################################################################# */
/* # vuepress-plugin-code-copy */
/* ############################################################################################# */

/* Fix code-copy height */
.code-copy {
  height: 0px;
}

/* Adjust icon size */
.code-copy svg {
  height: 20px;
}

/* Hide language */
div[class*="language-json"]::before {
  content: '' !important;
}

